---
// src/layouts/LayoutWrapper.astro
import MainLayout from './MainLayout.tsx';

const { title = "The Champions Burger" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gradient-to-b from-[#fefcf9] via-[#fff4ec] to-[#ffe0d2] text-black min-h-screen">
    <MainLayout>
      <slot />
    </MainLayout>
  </body>
</html>
