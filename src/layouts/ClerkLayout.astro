---
// ClerkLayout.astro
import { ClerkProvider } from "@clerk/clerk-react";
import MainLayout from "./MainLayout.tsx";

const { children, title = "Champions Burger" } = Astro.props;
const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-b from-[#fefcf9] via-[#fff4ec] to-[#ffe0d2] text-gray-800 min-h-screen">
    <ClerkProvider publishableKey={publishableKey}>
      <MainLayout>
        <slot />
      </MainLayout>
    </ClerkProvider>
  </body>
</html>
